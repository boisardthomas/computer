<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>computer-database</display-name>
  <welcome-file-list>
    <welcome-file>/WEB-INF/index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>AddComputer</servlet-name>
    <servlet-class>com.excilys.computerDatabase.servlet.AddComputer</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListComputer</servlet-name>
    <servlet-class>com.excilys.computerDatabase.servlet.ListComputer</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateComputer</servlet-name>
    <servlet-class>com.excilys.computerDatabase.servlet.UpdateComputer</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DeleteComputer</servlet-name>
  	<servlet-class>com.excilys.computerDatabase.servlet.DeleteComputer</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>AddComputer</servlet-name>
    <url-pattern>/addComputer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListComputer</servlet-name>
    <url-pattern>/ListComputer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateComputer</servlet-name>
    <url-pattern>/updateComputer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DeleteComputer</servlet-name>
  	<url-pattern>/deleteComputer</url-pattern>
  </servlet-mapping>

  
</web-app>